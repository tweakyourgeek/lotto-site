# Database Configuration
# PostgreSQL connection string for analytics tracking
# Example: postgresql://user:password@localhost:5432/lottery_calculator
DATABASE_URL=

# Admin Dashboard
# Password for accessing the admin dashboard at /admin
# IMPORTANT: Change this in production!
NEXT_PUBLIC_ADMIN_PASSWORD=admin123

# Email Integration (Optional)
# SendGrid API key for sending email reports
SENDGRID_API_KEY=
# Email address to send from (must be verified in SendGrid)
SENDGRID_FROM_EMAIL=hello@tweakyourgeek.com

# Mailchimp Integration (Alternative to SendGrid)
MAILCHIMP_API_KEY=
MAILCHIMP_SERVER_PREFIX=
MAILCHIMP_AUDIENCE_ID=

# PDF Generation (Optional - for production use)
# If you want server-side PDF generation, uncomment and configure
# BROWSERLESS_API_KEY=

# Analytics (Optional)
# Google Analytics tracking ID
# NEXT_PUBLIC_GA_ID=

# Application URLs
# Base URL for your application (used in emails and PDFs)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Tweak Your Geek URLs
# These will be included in the PDF and email reports
NEXT_PUBLIC_DREAM_LIFE_CALCULATOR_URL=https://tweakyourgeek.com/dream-life-calculator
NEXT_PUBLIC_NO_SPEND_JOURNAL_URL=https://tweakyourgeek.com/no-spend-journal
NEXT_PUBLIC_COMMUNITY_URL=https://tweakyourgeek.com/community
